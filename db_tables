USE puzzleserver;
CREATE TABLE IF NOT EXISTS teams (team_name VARCHAR(50), password VARCHAR(50), time_created TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP, time_last_solve TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP, PRIMARY KEY (team_name));
CREATE TABLE IF NOT EXISTS puzzles (puzzle_name VARCHAR(50), answer VARCHAR(50), release_date tinyint, number tinyint, PRIMARY KEY (puzzle_name));
CREATE TABLE IF NOT EXISTS solves (team_name VARCHAR(50), puzzle_name VARCHAR(50), solved TINYINT DEFAULT 0);
CREATE TABLE IF NOT EXISTS submissions (team_name VARCHAR(50), guess VARCHAR(50), puzzle_name VARCHAR(50), submit_time TIMESTAMP);
